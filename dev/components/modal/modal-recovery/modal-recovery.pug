mixin modal-recovery(props)
  // MODAL RECOVERY
  .modal.fade.modal-recovery#modalRecovery(tabindex="-1" aria-labelledby="modalRecoveryLabel" aria-hidden="true")
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          .modal-title ВОССТАНОВИТЬ ПАРОЛЬ
          +button-modal-close()
        .modal-body
          +form-recovery

